<!-- Header -->
<header class="bg-white shadow-md relative">
  <!-- Navigation + Avatar/Sign Up -->
  <div class="w-full px-4 py-3 flex items-center justify-between">
    <!-- Company Logo and Text -->
    <a href="/">  
      <div class="flex items-center space-x-1">
        <%= image_tag 'wthr-logo.png', alt: 'wthr company logo', class: 'h-8 w-auto sm:h-12 md:h-16 lg:h-20' %>
        
        <span class="whitespace-nowrap italic antialiased uppercase font-black text-3xl sm:block md:text-5xl lg:text-6xl gradient-text">wthr</span>
        
      </div>
    </a>
    
    <div class="flex items-center space-x-6">
  
      <!-- Navigation and Search Box -->
      <div class="absolute bg-white shadow-lg z-50 left-0 right-0 top-full mt-1 p-4 hidden xl:flex xl:relative xl:shadow-none xl:p-0 xl:mt-0 xl:bg-transparent xl:w-auto xl:flex-row xl:items-center xl:space-x-4" id="menu">
        <!-- Navigation Links -->
        <nav class="flex flex-col xl:flex-row xl:space-x-4 xl:space-y-0 space-y-4 xl:items-center">
          <!--a href="#" class="text-gray-600 hover:text-gray-900 py-2 ">Some Nav</a-->
        </nav>
      </div>
    </div>

    <!-- Profile Avatar or Sign Up -->
    <div class="flex items-right items-center justify-between px-4 space-x-4">
      <button class="bg-gray-200 rounded-full flex items-center p-1 outline-none">
        <%= image_tag 'avatar.png', alt: 'Profile Avatar', class: 'h-8 w-8'%>
      </button>
      <!-- Hamburger Icon -->
      <div class="xl:hidden" onclick="toggleMenu('menu')">
        <div class="space-y-2">
          <div class="w-8 h-0.5 bg-black"></div>
          <div class="w-8 h-0.5 bg-black"></div>
          <div class="w-8 h-0.5 bg-black"></div>
        </div>
      </div>
    </div>

  </div>
</header>
