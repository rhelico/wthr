<div data-controller="address-autocomplete" class="max-w-lg mx-auto my-8 p-6 bg-white border border-gray-300 rounded-lg shadow-lg">
  <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">Address Autocomplete</h2>

  <div class="mb-4">
    <label for="address_autocomplete" class="block text-sm font-medium text-gray-700 mb-2">Search for an Address</label>
    <input
      type="text"
      name="address"
      id="address_autocomplete"
      data-controller="autocomplete"
      data-action="autocomplete:change->address-autocomplete#change"
      data-autocomplete-url="<%= addresses_path %>"
      autocomplete="off" 
      placeholder="Type an address..."
      class="w-full px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
    />
  </div>

  <div class="mb-4">
    <label for="latitude_result" class="block text-sm font-medium text-gray-700 mb-2">Latitude</label>
    <input
      type="text"
      id="latitude_result"
      name="latitude"
      data-address-autocomplete-target="latitude"
      autocomplete="off" 
      placeholder="Latitude"
      class="w-full px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
    />
  </div>

  <div class="mb-4">
    <label for="longitude_result" class="block text-sm font-medium text-gray-700 mb-2">Longitude</label>
    <input
      type="text"
      name="longitude"
      id="longitude_result"
      data-address-autocomplete-target="longitude"
      autocomplete="off"
      placeholder="Longitude"
      class="w-full px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
    />
  </div>
</div>
