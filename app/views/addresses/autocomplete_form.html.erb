<div class="max-w-lg mx-auto my-8 p-6 bg-white border border-gray-300 rounded-lg shadow-lg">
  <div data-controller="address-autocomplete" >
    <h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">git thee <i><b>WTHR</b><i></h2>

    <div class="mb-4">
      <label for="address_autocomplete" class="block text-sm font-medium text-gray-700 mb-2">Search for an Address</label>
      <input
        type="text"
        name="address"
        id="address_autocomplete"
        data-address-autocomplete-target="query"
        autocomplete="off"
        placeholder="Type an address..."
        class="w-full px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      />
      <div data-address-autocomplete-target="results" class="absolute bg-white shadow-md mt-1 w-full border border-gray-300"></div>
    </div>

    <div class="mb-4">
      <label for="latitude_result" class="block text-sm font-medium text-gray-700 mb-2">Latitude</label>
      <input
        type="text"
        id="latitude_result"
        name="latitude"
        data-address-autocomplete-target="latitude"
        autocomplete="off"
        placeholder="Latitude"
        class="w-full px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      />
    </div>

    <div class="mb-4">
      <label for="longitude_result" class="block text-sm font-medium text-gray-700 mb-2">Longitude</label>
      <input
        type="text"
        name="longitude"
        id="longitude_result"
        data-address-autocomplete-target="longitude"
        autocomplete="off"
        placeholder="Longitude"
        class="w-full px-4 py-2 bg-white border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      />
    </div>

  </div>
  <div data-controller="weather">
    <div class="mt-4">
      <h3 class="text-lg font-semibold">Weather Information</h3>
      <div data-weather-target="weather">
        <!-- Weather data will be dynamically inserted here -->
      </div>
    </div>
  </div>
</div>